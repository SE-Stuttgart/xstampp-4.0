{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "max-line-length": [
      true,
      {
        "limit": 180,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ]
  }
}
